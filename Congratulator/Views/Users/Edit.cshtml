@model Congratulator.Models.UserDbModel;

@{
    ViewData["Title"] = "Добавить пользователя";
}

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-2">
        <label asp-for="Name">Имя</label>
        <input asp-for="Name" type="text" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label asp-for="Surname">Фамилия</label>
        <input asp-for="Surname" type="text" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label asp-for="BDate">Дата рождения</label>
        <input asp-for="BDate" type="date" class="form-control">
    </div>
    <div class="form-group mb-2">
        <label asp-for="Avatar">Фотография</label>
        <input asp-for="Avatar" id="image" type="file" class="form-control-file">
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>